<% @title = 'Edit Event Location'%>
<h2>Edit event location </h2>

<%= form_for :location, url: event_location_path(@location), method: :patch do |f| %>

    <% if @location.errors.any? %>
        <ul>
          <% @location.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
    <% end %>

    <p>
      <%= f.label :name %>
      <%=  f.text_field :name %>
    </p>

    <p>
      <%= f.label :available_seats %>
      <%= f.text_field(:available_seats) %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area(:description) %>
    </p>
    <p>
      <%= f.submit %>
    </p>

<% end %>
<p>
  <%= link_to 'Back to details', action: 'show' %>
</p>


